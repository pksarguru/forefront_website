<section class="overflow-hidden slider-banner">
  <div class="main-slider">
        <img src="<%= @team_member.secondary_image %>" style="object-fit:cover; width:100vw; height:51vw" alt="" class="img-fluid">
  </div>
</section>

<div class='container'>
  <div class='space-50'></div>
  <div class="row">
    <div class="col-md-12 team-bio">
      <h2><%= @team_member.first_name + " " + @team_member.last_name %></h2>
      <h3><%= @team_member.role %></h3>
      <p>
        <%= @team_member.bio %>
      </p>
    </div>
  </div>
  <div class='space-80'></div>
</div>
