<% content_for :navbar do %>
  <%= render partial: "partials/navbar", locals: {extra_classes: 'secondary-page contact'} %>
<% end %>

<div class="container">

  <h1>Tag: <%= @tag.name %></h1>

  <% @featured_projects.each do |project| %>
  <div class="row">
    <div class="col-md-12">
      <a href="/projects/<%= project.id %>">
      <img class="img-fluid project-index-img" src="<%= asset_path project.images.first.url %>" alt="">
      </a>
      <h2 class='project-index-name'><%= project.name %></h2>
      <% project.tags.each do |tag| %>
      <a href="/tags/<%= tag.id %>" class="btn btn-lg btn-skin-border project-tags"><%= tag.name %></a>
      <% end %>
    </div>
  </div>
  <% end %>

  <% @projects.each do |project| %>
  <div class="row">
    <div class="col-md-12">
      <a href="/projects/<%= project.id %>">
      <img class="img-fluid project-index-img" src="<%= asset_path project.images.first.url %>" alt="">
      </a>
      <h2 class='project-index-name'><%= project.name %></h2>
      <% project.tags.each do |tag| %>
      <a href="/tags/<%= tag.id %>" class="btn btn-lg btn-skin-border project-tags"><%= tag.name %></a>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
